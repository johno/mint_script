<%= form_for(@script, remote: true, html: { class: 'form', id: :script }) do |f| %>
  <%= f.hidden_field :content, id: 'content-field' %>
  <%= f.hidden_field :file_type, id: 'file-type-field' %>
  <%= f.hidden_field :user_id, value: @user.nil? ? nil : @user.id %>
<% end %>

<%= form_for(Image.new, remote: true, multiple: true, html: { class: 'form', id: :image }) do |f| %>
  <%= f.hidden_field :script_id, value: @script.id %>
  <%= f.file_field :data_file, class: :hidden %>
<% end %>

<%= render partial: 'layouts/editor' %>