<div class="row">
  <div class="form span8">
    <h1>Sign up for mintscript</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% #= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'user@example.com', autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'Confirm Pass' %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="field">
        <%= f.submit 'Sign up for free!', class: 'btn btn-primary btn-large', id: 'submit' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
