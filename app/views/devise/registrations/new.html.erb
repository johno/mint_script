<div class="pure-u-1-3">
  <h1>Get writing with mintscript</h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'pure-form' }) do |f| %>
    <%= devise_error_messages! %>
    <fieldset class="pure-group">
      <%= f.email_field :email, autofocus: true, placeholder: :Email, class: 'pure-input-1-1' %>
      <%= f.password_field :password, placeholder: :Password, class: 'pure-input-1-1' %>
      <%= f.password_field :password_confirmation, placeholder: :Confirm, class: 'pure-input-1-1' %>
      <%= f.submit 'Sign up for free!', class: 'pure-button pure-button-primary pure-input-1-1', id: :submit %>
    </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
</div>