<div class='pure-g-r pure-center'> 
  <div class="pure-u-1-3 tons-of-margin-on-top">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: :sign_in, class: :sessy_form }) do |f| %>
        <%= f.text_field :email, autofocus: true, label: false, placeholder: :Email, class: 'pure-input-1-1', id: :email %>
        <%= f.password_field :password, label: false, placeholder: :Password, class: 'pure-input-1-1', id: :password %>
        <%= f.submit "Sign in to mintscript", class: 'pure-button pure-input-1-1 pure-button', id: :submit %>
    <% end %>
    <div class='help-links'>
      <%= link_to "register", new_registration_path(resource_name), class: 'grab-email pull-left' %>
      <%= link_to "forgot", new_password_path(resource_name), class: 'grab-email pull-right' %>
  </div>
</div>