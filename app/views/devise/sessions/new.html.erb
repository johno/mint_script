<div class="row">
  <div class="form span8">
    <h1>Sign in to mintscript</h1>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'user@example.com', autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <% # Let's always remember, always. %>
        <%= f.hidden_field :remember_me, value: true %> 
      <% end -%>

      <div class="field">
        <%= f.submit "Sign in", class: 'btn btn-primary btn-large', id: 'submit' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>