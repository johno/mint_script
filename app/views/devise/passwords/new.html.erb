<div class='pure-g-r pure-center'>
  <div class="pure-u-1-3 tons-of-margin-on-top">
    <h2>Forgot your password?</h2>
    <%= simple_form_for(resource, 
               as: resource_name, 
               url: password_path(resource_name), 
               html: { method: :post }, 
               html: { }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, placeholder: :Email, id: :email, class: 'pure-input-1-1' %>
      <%= f.submit "Send reset password instructions", 
                     class: 'pure-button pure-input-1-1 pure-button', 
                     id: :submit %>
    <% end %>
    <div class="help-links">
      <%= link_to "sign in", new_session_path(resource_name), class: 'grab-email pull-left' %>
      <%= link_to "register", new_registration_path(resource_name), class: 'grab-email pull-right' %>
    </div>
  </div>
</div>