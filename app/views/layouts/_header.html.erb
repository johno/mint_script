<header>
  <div class='pure-menu pure-menu-open pure-menu-horizontal'>
    <%= link_to 'mintscript', root_path, class: 'pure-menu-heading' %>
    <ul class='pull-right' >
      <li>
        <% if current_user %>
          <%= link_with_icon path: scripts_path, icon: 'folder-open-alt' %>
        <% else %>
          <%= link_with_icon path: try_path, icon: :leaf %>
        <% end %>
      </li>
      <% if @script %>
        <li>
          <%= link_with_icon path: '#', icon: :columns, id: :columns %>
        </li>
        <li>
          <%= link_with_icon path: '#', icon: :save, id: :save %>
        </li>
      <% end %>
      <li>
        <% if current_user %>
          <%= link_with_icon path: destroy_user_session_path, method: :delete, icon: :signout %>
        <% else %>
          <%= link_with_icon path: new_user_session_path, icon: :signin %>
        <% end %>
      </li>
    </ul>
  </div>
</header>